@model OnlineStorePlatform.Models.ViewModels.Products.ProductListVm

@{
    ViewBag.Title = "All Products";
}

<div class="row products">
    <div class="col-md-9 col-sm-7 col-xs-12 pull-right">
        <div class="row">
            @foreach (var vm in Model.Products)
            {
                <div class="col-md-4 col-sm-7 product">
                    <div class="thumbnail">
                        <a href="#">
                            <img src="~/IMG/Products/@Html.DisplayFor(vms=>vm.Image)" alt="Product">
                        </a>
                        <a href="/modal/content/" class="btn btn-info btn-block btn-sm" name="@Html.DisplayFor(vms=>vm.Id)" data-toggle="modal" data-target="#myModal">Quick View</a>
                        <!-- Modal -->
                        <div class="modal fade" id="myModal" role="dialog">
                            <div class="modal-dialog modal-lg">

                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">@Html.DisplayFor(vms => vm.Name)</h4>
                                    </div>
                                    <div class="modal-body">
                                        <a href="#"><img src="~/IMG/Products/@Html.DisplayFor(vms=>vm.Image)" alt="Product" /></a>
                                        <p>@Html.DisplayFor(vms => vm.Description)</p>
                                        <h1>@Html.DisplayFor(vms => vm.Price)$</h1>
                                        <p>@Html.DisplayFor(vms => vm.Category.Name)</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-info" data-dismiss="modal">Buy</button>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                                @*@Html.Partial("_ModalContent")*@
                            </div>
                        </div>
                        <div class="caption">
                            <h4>@Html.DisplayFor(vms => vm.Name)</h4>
                            <h2>@Html.DisplayFor(vms => vm.Price)$</h2>
                            <h4>@Html.DisplayFor(vms => vm.Category.Name)</h4>
                            @*<p>
                                <a href="#" class="btn btn-primary">
                                    <i class="fa fa-user fa-fw"></i>
                                    Add To Card
                                </a>
                            </p>*@
                            @using (Html.BeginForm("AddToCart", "Cart"))
                            {
                                //<div class="pull-right">
                                @Html.HiddenFor(vms => vm.Id, new { Name = "productId" })
                                @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                                <input type="submit" class="btn btn-primary" value="Add To Cart" />
                                //</div>
                            }
                        </div>
                    </div>
                </div>
            }
