@model OnlineStorePlatform.Models.ViewModels.Products.DeleteProductVm

@{
    ViewBag.Title = "Delete Product";
}

<hr />
<hr />
@using (Html.BeginForm())
{
    <div class="row delete-product">
        <fieldset disabled>
            <div class="form-group">
                <img src="~/IMG/Products/@Html.DisplayFor(vm=>vm.ImageUrl)" alt="Product" />
            </div>
            <div class="form-group">
                @Html.LabelFor(vm => vm.Name)
                @Html.TextBoxFor(vm => vm.Name, new { @class = "form-control border-color-1" })
            </div>

            <div class="form-group">
                @Html.LabelFor(vm => vm.Price)
                @Html.TextBoxFor(vm => vm.Price, new { @class = "form-control border-color-4" })
            </div>

            <div class="form-group">
                @Html.LabelFor(vm => vm.Description)
                @Html.TextBoxFor(vm => vm.Description, new { @class = "form-control border-color-5" })
            </div>

            <div class="form-group">
                @Html.LabelFor(vm => vm.CategoryName)
                @Html.TextBoxFor(vm => vm.CategoryName, new { @class = "form-control border-color-6" })
            </div>
        </fieldset>
        <div class="form-group">
            <input type="submit" value="Delete" class="form-group btn btn-danger btn-lg" />
        </div>
        <div>
            @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-lg btn-success" })
        </div>
    </div>
}