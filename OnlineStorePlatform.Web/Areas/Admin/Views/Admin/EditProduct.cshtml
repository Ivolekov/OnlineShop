@model OnlineStorePlatform.Models.ViewModels.Products.EditProductVm
@{ 
    ViewBag.Title = "Edit Product";
}
<h1>Edit Product</h1>
@using (Html.BeginForm("EditProduct", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row edit-product">
        <div class="form-group">
            <img src="~/IMG/Products/@Html.DisplayFor(vm=>vm.ImageUrl)" alt="Category" />
        </div>
        <div class="form-group">
            @*@Html.LabelFor(vm => vm.Image):
            @Html.EditorFor(vm => vm.Image, new { htmlAttbutes = new { @class = "form-control" } })*@
            @Html.TextBoxFor(vm => vm.ImageFile, new { @type = "file", @class= "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(vm => vm.Name):
            @Html.EditorFor(vm => vm.Name, new { htmlAttbutes = new { @class = "form-control" } })
        </div>

        @*@Html.Partial("_Categories");*@
        <div class="form-group">
            @Html.LabelFor(vm => vm.CategoryName):
            @*@Html.EditorFor(vm => vm.CategoryName, new { htmlAttbutes = new { @class = "form-control" } })*@
            @Html.DisplayFor(vm=>vm.CategoryName)
        </div>

        <div class="form-group">
            @Html.LabelFor(vm => vm.Price):
            @Html.EditorFor(vm => vm.Price, new { htmlAttbutes = new { @class = "form-control" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(vm => vm.Description):
            @Html.TextAreaFor(vm => vm.Description, new { htmlAttbutes = new { @class = "form-control", rows = "10" } })
        </div>

        <div class="form-group">
            <input type="submit" value="Save Changes" class="form-group btn btn-warning btn-lg" />
        </div>
    </div>
}