@model OnlineStorePlatform.Models.ViewModels.Admin.AdminPageVm

@{
    //Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Admin Panel";
}

<h2>Index</h2>


<div class="row">
    <div class="col-sm-5 table-bordered">
        <h3><strong>@Html.ActionLink("Add Category", "AddNewCategory", null, new { @class = "btn btn-lg btn-info", data_toggle = "modal", data_target = "#myModal"})</strong></h3>
        @Html.Partial("_AddNewCategory")
        <table class="table table-hover">
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td><img src="@Html.DisplayFor(vm => category.Image)" alt="category" class="img-categories" /></td>
                    <td><h4>@Html.DisplayFor(vm => category.Name)</h4></td>
                    <td>@Html.ActionLink("Edit", "EditCategory", new { id = category.Id }, new { @class = "btn btn-lg btn-warning" })</td>
                    <td>@Html.ActionLink("Delete", "DeleteCategory", new { id = category.Id }, new { @class = "btn btn-lg btn-danger" })</td>
                </tr>
            }
        </table>
    </div>
    <div class="col-sm-5 table-bordered">
        <table class="table">
            <tr>
                <th>Role</th>
                <th>Count</th>
            </tr>
            <tr>
                <td></td>
            </tr>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-sm-12 table-bordered">
        <h3>@Html.ActionLink("Add Product", "AddNewProduct", null, new { @class = "btn btn-lg btn-info" })</h3>
        <table class="table table-hover">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Category Name</th>
                <th>Price</th>
                <th>Description</th>
            </tr>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>
                        <img src="@Html.DisplayFor(vm => product.Image)" alt="category" class="img-categories" />
                    </td>
                    <td class="col-sm-3">
                        <h4>@Html.DisplayFor(vm => product.Name)</h4>
                    </td>
                    <td>
                        <h4>@Html.DisplayFor(vm => product.CategoryName)</h4>
                    </td>
                    <td>
                        <h4>@Html.DisplayFor(vm => product.Price)$</h4>
                    </td>
                    <td>
                        <p id="admin-description-product">
                            @Html.DisplayFor(vm => product.Description)
                        </p>
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditProduct", new { id = product.Id }, new { @class = "btn btn-lg btn-warning" })
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteProduct", new { id = product.Id }, new { @class = "btn btn-lg btn-danger" })
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

